# === –§–ò–ö–° PYTORCH –î–õ–Ø WINDOWS (–µ—Å–ª–∏ –Ω—É–∂–µ–Ω) ===
def fix_pytorch_windows():
    """–ò—Å–ø—Ä–∞–≤–ª—è–µ—Ç –ø—Ä–æ–±–ª–µ–º—ã —Å PyTorch –Ω–∞ Windows"""
    try:
        os.environ['KMP_DUPLICATE_LIB_OK'] = 'TRUE'
        os.environ['OMP_NUM_THREADS'] = '1'
        
        if sys.platform.startswith('win'):
            lib_paths = []
            
            if hasattr(sys, 'real_prefix') or (hasattr(sys, 'base_prefix') and sys.base_prefix != sys.prefix):
                venv_lib = os.path.join(sys.prefix, 'Library', 'bin')
                if os.path.exists(venv_lib):
                    lib_paths.append(venv_lib)
                
                venv_lib2 = os.path.join(sys.prefix, 'Lib', 'site-packages', 'torch', 'lib')
                if os.path.exists(venv_lib2):
                    lib_paths.append(venv_lib2)
            
            for path in lib_paths:
                if path not in os.environ['PATH']:
                    os.environ['PATH'] = path + os.pathsep + os.environ['PATH']
        
        print("‚úÖ PyTorch Windows fix applied")
        return True
        
    except Exception as e:
        print(f"‚ö†Ô∏è PyTorch fix failed: {e}")
        return False

# –ü—Ä–∏–º–µ–Ω—è–µ–º —Ñ–∏–∫—Å
fix_pytorch_windows()

